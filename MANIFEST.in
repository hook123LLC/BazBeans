# Include documentation and configuration files
include README.md
include LICENSE
include requirements.txt
include *.md
include *.yml
include *.yaml
include examples/*
include examples/**/*.py
include examples/**/*.md
include setup/*
include setup/**/*.sh
include setup/**/*.ps1
include setup/**/*.yaml

# Include auto-installer scripts
include setup_cli_installer.py
include setup_cli_command.py
include post_install.py

# Include package data
recursive-include src *.py

# Exclude development files
exclude .gitignore
exclude .flake8
exclude setup.py

# Exclude internal documentation
exclude internal.md
exclude test_installation.md